# .env.example - Variables de entorno para MediPlus

# -------------------------------
# Configuración de Flask
# -------------------------------
FLASK_SECRET_KEY=tu_clave_segura_aqui   # Cambiar por una clave secreta real
FLASK_DEBUG=True                        # True para desarrollo, False en producción
SESSION_COOKIE_SAMESITE=Lax              # 'Lax', 'Strict' o 'None'
SESSION_COOKIE_SECURE=False              # True en producción con HTTPS
PORT=5000                                # Puerto de la app

# -------------------------------
# Configuración de base de datos Oracle
# -------------------------------
DB_USER=usuario_bd                       # Usuario Oracle
DB_PASSWORD=clave_bd                      # Contraseña Oracle
DB_HOST=localhost                         # Host donde corre Oracle XE
DB_PORT=1521                              # Puerto por defecto Oracle XE
DB_SERVICE_NAME=XE                        # Servicio de Oracle XE

# -------------------------------
# Configuración adicional
# -------------------------------
HASH_ALGORITHM=bcrypt                     # Algoritmo para hash de contraseñas
EXCEL_IMPORT_PATH=data/usuarios.xlsx      # Ruta ejemplo para importar usuarios
JSON_IMPORT_PATH=data/usuarios.json       # Ruta ejemplo para importar usuarios desde JSON
